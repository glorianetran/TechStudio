<!DOCTYPE html>
<html>
<% #  This file is app/views/movies/index.html.haml %>
    <!-- Header -->
<div style="height:10em;" class="span12">
</div>


    <!-- Header -->
    <header>
      <div class="container">
        <div class="row">
          <div class="col-lg-12 text-center">
            <h2 class="section-heading text-uppercase">All Projects</h2>
          </div>
        </div>
                <center>
        <div id="tag_cloud">
          <% tag_cloud Project.tag_counts, %w[s m l] do |tag, css_class| %>
            <%= link_to tag.name, tag_path(tag.name), class: css_class %>
          <% end %>
        </div>
        </center>
      </div>
      </header>
      
<center>
  <table id="projects">
  <thead>
    <tr>
      <th>Title</th>
      <th>Creator</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
    <% @projects.each do |p| %>
      <tr>
        <td>
          <%= link_to p.title, project_path(p)  %>
        </td>
        <td>
          <%= p.creator %>
        </td>
        <td>
          <%= p.description %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<p><%= link_to "Create Project", new_project_path %></p>
</center>
</html>
