<div class="container-fluid">
  <div class="row">
    <div class="col-sm-2">
    <% if current_user %>
      <h5>Chatrooms</h5>
      <ul>
        <% current_user.chatrooms.each do |chatroom| %>
          <li><%= link_to chatroom.name, chatroom_path(chatroom) %></li>
        <% end %> 
      </ul>
    <% end %> 
    </div>
    <div class="col-sm-10">
      <p id="notice"><%= notice %></p>
      
      <p>
        <strong>Name:</strong>
        <%= @chatroom.name %>
      </p>
      
      <%= link_to 'Edit', edit_chatroom_path(@chatroom) %> |
      <%= link_to 'Back', chatrooms_path %>
    </div>
  </div>
</div>
