<div style="height:10em;" class="span12">
</div>
<div class="container">
  


<div class="project-style-div">
  <div align="right">
    <% if @user == current_user %>
       <%= button_to "Edit Profile", edit_user_path(@user), :method => :get, class: "btn-primary" %>
       <br>
  <% end %> 
  </div>
 <center>
   <img src="/images/alfie_logo1.png" class="user-imag" style="width:15%; align:center; border-radius: 50%;">
   <h1><%= @user.name %>
   </h1>
   <div align="center" style="color:gray">Joined <%= @user.created_at.strftime("%m-%d-%Y") %></div>
   </center>
<br>

<div align="left"><h4>Interests: <%= @user.interests %></h4></div>
<div align="left"><h4>Skills: <%= @user.skills %></h4> </div>

<hr/> <h4>Bio: <%= simple_format @user.bio %></h4>
<hr/>

 </div>
 <br>



<br>
<h4>Projects created: </h4> 
<br>
<div class="Absolute-Center-Project is-Responsive project-list-info">

  <% if @user.created_projects.blank? == false %>
    <div class="project-table-list">  
    <center>
    <table id="projects">
    <thead>
      <tr>
        <th>Title</th>
        <th>Summary</th>
          <% if @user == current_user %>
            <th>Manage Project and Collaborators</th>
            <th>Notifications</th>
          <% end %>
      </tr>
    </thead>

    <tbody>
      <% @user.created_projects.each do |p| %>
        <tr>
          <td>
            <%= link_to p.title, project_path(p)  %>
          </td>
          <td>
            <%= p.summary%>
          </td>
  
            <% if @user == current_user %>
              <td>         
                  <table>
                    <tr>
                      <td><%= button_to "MANAGE", edit_project_path(p), :method => :get, class: "btn-primary" %></td>
                      <td><%= button_to "DELETE", project_path(p), :method => :delete, data: {confirm: "Are you sure you want to delete this project?"}, class: "btn-primary" %></td>
                    </tr>
              </table>
            </td>
            <td>
              <% if p.potentials.length != 0 %>
                You have potentials waiting
              <%else%>
                No potentials
              <%end%>
            </td>
          <% end %>
        </tr>
    <% end %>
    
    <% else %> <!-- else for @user.created_projects --> 
      <h3> No Created Projects. </h3>
    <% end %>
    </tbody>
    </table>
  <br>
  <br>
  </div>

  <br>
  <h4>Project Collaborations: </h4>
  <br>
  
<% if @user.collab_projects.blank? == false %>
   <div class="project-table-list">  

<center>
  <table id="projects">
  <thead>
    <tr>
      <th>Title</th>
      <th>Creator</th>
      <th>Summary</th>
      <% if current_user == @user%>
        <th>Manage</th>
      <%end%>
      
    </tr>
  </thead>

  <tbody>
    <% @user.collab_projects.each do |p| %>
      <tr>
        <td>
          <%= link_to p.title, project_path(p)  %>
        </td>
        <td>
          <% if current_user != nil %>
            <% if p.creator.id == current_user.id %>
  
            <%= p.creator.name %> (You)
            
            <% else %>
            
            <%= link_to p.creator.name, user_path(p.creator) %>
            
            <% end %>
            
          <% else %> 
              <%= link_to p.creator.name, user_path(p.creator) %>
          <% end %>
        </td>
        <td>
          <%= p.summary %>
        </td>
        <% if current_user != p.creator && current_user == @user %>
          <td>
          <center>
          <%= button_to "RETRACT COLLAB",delete_collaborator_path(p, :user => current_user), :method => :post, data: {confirm: "Are you sure you don't want to be a collaborator?"}, class: "btn-primary" %>
          </center>
          </td>
        <%elsif current_user == p.creator%>
          <td><center><%= button_to "MANAGE", edit_project_path(p), :method => :get, class: "btn-primary" %></center></td>
        <%end%> 
    
          </tr>
  <% end %>
    
    
  </tbody>
</table>

<% else %> 

<h3> No Project Collaborations. </h3>

<% end %>

</div>

</center>

</div>

</div> 

</div>