<div style="height:10em;" class="span12">
</div>
<div class="container">
  



<div class="Absolute-Center-Project is-Responsive">
 <center>
   <img src="/images/alfie_logo1.png" class="user-imag" style="width:15%; align:center; border-radius: 50%;">
   <h1><%= @user.name %>
   </h1>
   <div align="center" style="color:gray">Joined <%= @user.created_at.strftime("%m-%d-%Y") %></div>
   </center>
<br>

<div align="left"><h4>Interests: <%= @user.interests %></h4></div>
<div align="left"><h4>Skills: <%= @user.skills %></h4> </div>

<hr/> <h4>Bio: <%= @user.bio %></h4> </div>
<hr/>
<p>
  <% if @user == current_user %>
       <%= button_to "Edit Profile", edit_user_path(@user), :method => :get, class: "btn-primary" %>
  <% end %> 
  <%= link_to "Back to projects", projects_path %></p>

  </div>




<br>
   <h4>Projects created: </h4>
<div class="Absolute-Center-Project is-Responsive project-list-info">

 <div class="project-table-list">  

<center>
  <table id="projects">
  <thead>
    <tr>
      <th>Title</th>
      <th>Creator</th>
      <th>Summary</th>
      <% if @user == current_user %>
      <th>Manage Project</th>
      <% end %>
    </tr>
  </thead>

  <tbody>

  
    <% @user.created_projects.each do |p| %>
      <tr>
        <td>
          <%= link_to p.title, project_path(p)  %>
        </td>
        <td>
          <%= link_to p.creator.name, user_path(p.creator) %>
        </td>
        <td>
          <%= p.summary %>
        </td>
    
         

          <% if @user == current_user %>
            <td>         
            <table>
                <tr>
                  <td><%= button_to "EDIT", edit_project_path(p), :method => :get, class: "btn-primary" %></td>
                  <td><%= button_to "DELETE", edit_project_path(p), :method => :delete, data: {confirm: "Are you sure you want to delete this project?"}, class: "btn-primary" %></td>
                </tr>
            </table>
          </td>
        <% end %>
          </tr>
  <% end %>
    
    
  </tbody>
</table>
</div>

  <h4>Project Collaborations: </h4>
  
   <div class="project-table-list">  

<center>
  <table id="projects">
  <thead>
    <tr>
      <th>Title</th>
      <th>Creator</th>
      <th>Summary</th>
    </tr>
  </thead>

  <tbody>

  
    <% @user.collab_projects.each do |p| %>
      <tr>
        <td>
          <%= link_to p.title, project_path(p)  %>
        </td>
        <td>
          <%= link_to p.creator.name, user_path(p.creator) %>
        </td>
        <td>
          <%= p.summary %>
        </td>
    
          </tr>
  <% end %>
    
    
  </tbody>
</table>
</div>

</center>

</div>

</div> <!-- table div -->
